{{#if show}}
  {{#paper-dialog class='request-resume' onClose=(action "cancel")}}

    {{#paper-dialog-content}}
      <h2 class="md-title">Request Resume</h2>
      {{paper-input placeholder="name" autofocus=true value=name onChange=(action (mut name))}}
      {{paper-input placeholder="email" autofocus=true value=email onChange=(action (mut email))}}
    {{/paper-dialog-content}}

    {{#paper-dialog-actions class="layout-row"}}
      <span class="flex"></span>
      {{#paper-button primary=true onClick=(action "cancel")}}Cancel{{/paper-button}}
      {{#paper-button primary=true onClick=(action "submit")}}Submit{{/paper-button}}
    {{/paper-dialog-actions}}

  {{/paper-dialog}}
{{/if}}
