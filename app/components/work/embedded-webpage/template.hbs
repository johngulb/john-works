{{#if work.details}}
  {{#details-card details=work.details}}
    {{#paper-button onClick=(action 'open')}}
      Visit Website
    {{/paper-button}}
  {{/details-card}}
{{/if}}

<!-- The loading forces the iframe to reload -->
{{#if isLoading}}
  {{paper-progress-circular}}
{{else if work.url}}
  {{webpage-view url=work.url}}
{{/if}}
